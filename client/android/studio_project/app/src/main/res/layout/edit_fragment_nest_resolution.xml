<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
	<TableLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
	   <TableRow
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" >
	       <TextView
	           style="@style/Header"
	           android:text="@string/hatch_data_title" />
	   </TableRow>    
	   <TableRow
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" >
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:text="@string/hatch_data_hatch_date" />
	       
	       <Button
	            android:id="@+id/buttonHatchDate"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/date_button"
	            android:onClick="handleClick" />
	   </TableRow> 
	   <TableRow
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" >
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:text="@string/hatch_data_hatch_add_date" />
	       
	       <Button
	            android:id="@+id/buttonAdditionalHatchDate"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/date_button"
	            android:onClick="handleClick"/>
	   </TableRow> 
	   <TableRow
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" >
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:text="@string/hatch_data_disorientation" />
	       
	       <ToggleButton
	           android:textOn="Yes"
	           android:textOff="No"
	           android:id="@+id/fieldDisorientation"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content" 
	            android:onClick="handleClick"/>
	   </TableRow>
		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/hatch_data_monitor_daily" />

			<ToggleButton
				android:textOn="Yes"
				android:textOff="No"
				android:id="@+id/fieldMonitorDaily"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:onClick="handleClick"/>
		</TableRow>
	   <TableRow
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" >
	       <TextView
             style="@style/Header"
	           android:text="@string/excavation_data_title" />
	   </TableRow>   
	   <TableRow
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" >
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:text="@string/excavation_data_excavation_date" />
	       
	       <Button
	            android:id="@+id/buttonExcavationDate"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/date_button"
	            android:onClick="handleClick"/>
	   </TableRow>  
	   <TableRow
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" >
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:text="@string/excavation_data_excavated" />
	       
	       <ToggleButton
	           android:textOn="Yes"
	           android:textOff="No"
	           android:id="@+id/fieldExcavated"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content" 
	           android:onClick="handleClick"/>
	   </TableRow>

		<TableRow
			android:id="@+id/rowInundated"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/excavation_data_inundated" />

			<ToggleButton
				android:textOn="Yes"
				android:textOff="No"
				android:id="@+id/fieldInundated"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:onClick="handleClick"/>
		</TableRow>


		<TableLayout
			android:id="@+id/whyNotExcavatedFields"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<TableRow
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/rowWhyNotExcavatedLabel" >
				<TextView
					style="@style/CheckboxHeader"
					android:text="@string/excavation_data_reason_no_excavation" />
			</TableRow>

			<TableRow
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >

				<com.islandturtlewatch.nest.reporter.ui.MonitoredSpinner
					android:id="@+id/fieldWhyNotExcavated"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:entries="@array/why_not_excavated"
					OnItemSelected="handleItemSelected"
					/>
			</TableRow>

		</TableLayout>

	   <TableLayout 
	            android:id="@+id/tableExcavationCounts">

		   <TableRow
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="@string/excavation_data_hatched_shells" />
		
		        <com.islandturtlewatch.nest.reporter.ui.MonitoredEditText
		            android:id="@+id/fieldHatchedShells"
		            android:inputType="number"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
	              onTextChangeHandler="handleTextChange"/>
		   </TableRow>
		   <TableRow
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content" >

			   <TextView
				   android:layout_width="0dp"
				   android:layout_height="wrap_content"
				   android:layout_weight="1"
				   android:text="@string/excavation_data_outside_nest" />

			   <com.islandturtlewatch.nest.reporter.ui.MonitoredEditText
				   android:id="@+id/fieldEggsOutsideNest"
				   android:inputType="number"
				   android:layout_width="0dp"
				   android:layout_height="wrap_content"
				   android:layout_weight="1"
				   onTextChangeHandler="handleTextChange"/>
		   </TableRow>
		   <TableRow
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="@string/excavation_data_dead_pipped" />
		
		        <com.islandturtlewatch.nest.reporter.ui.MonitoredEditText
		            android:id="@+id/fieldDeadPipped"
		            android:inputType="number"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
	              onTextChangeHandler="handleTextChange"/>
		   </TableRow>
		   <TableRow
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="@string/excavation_data_live_pipped" />
		
		        <com.islandturtlewatch.nest.reporter.ui.MonitoredEditText
		            android:id="@+id/fieldLivePipped"
		            android:inputType="number"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
	              onTextChangeHandler="handleTextChange"/>
		   </TableRow>
		   <TableRow
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="@string/excavation_data_whole_unhatched" />
		
		        <com.islandturtlewatch.nest.reporter.ui.MonitoredEditText
		            android:id="@+id/fieldWholeUnhatched"
		            android:inputType="number"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
	              onTextChangeHandler="handleTextChange"/>
		   </TableRow>
		   <TableRow
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="@string/excavation_data_eggs_damaged" />
		
		        <com.islandturtlewatch.nest.reporter.ui.MonitoredEditText
		            android:id="@+id/fieldEggsDamaged"
		            android:inputType="number"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
	              onTextChangeHandler="handleTextChange"/>
		   </TableRow>
		   <TableRow
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		
		        <TextView
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="@string/excavation_data_total_eggs" />
		        <TextView
		            android:id="@+id/displayTotalEggs"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"/>
		   </TableRow>
		   <TableRow
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content" >
	  
	          <TextView
	              android:layout_width="0dp"
	              android:layout_height="wrap_content"
	              android:layout_weight="1"
	              android:text="@string/excavation_data_dead_in_nest" />
	  
	          <com.islandturtlewatch.nest.reporter.ui.MonitoredEditText
	              android:id="@+id/fieldDeadInNest"
	              android:inputType="number"
	              android:layout_width="0dp"
	              android:layout_height="wrap_content"
	              android:layout_weight="1"
	              onTextChangeHandler="handleTextChange"/>
	     </TableRow> 
	     <TableRow
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content" >
	  
	          <TextView
	              android:layout_width="0dp"
	              android:layout_height="wrap_content"
	              android:layout_weight="1"
	              android:text="@string/excavation_data_live_in_nest" />

	          <com.islandturtlewatch.nest.reporter.ui.MonitoredEditText
	              android:id="@+id/fieldLiveInNest"
	              android:inputType="number"
	              android:layout_width="0dp"
	              android:layout_height="wrap_content"
	              android:layout_weight="1"
	              onTextChangeHandler="handleTextChange"/>
	     </TableRow>
		   <TableRow
			   android:id="@+id/rowHatchlingsHandled"
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content" >

			   <TextView
				   android:layout_width="0dp"
				   android:layout_height="wrap_content"
				   android:layout_weight="1"
				   android:text="@string/excavation_data_hatchlings_handled" />

			   <com.islandturtlewatch.nest.reporter.ui.MonitoredSpinner
				   android:id="@+id/fieldHatchlingsHandled"
				   android:layout_height="wrap_content"
				   android:layout_width="wrap_content"
				   android:entries="@array/hatchlings_handled_options"
				   OnItemSelected="handleItemSelected"
				   />
		   </TableRow>
	   </TableLayout>
	</TableLayout>
</ScrollView>
